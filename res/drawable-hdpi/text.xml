<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background">
    <shape>
        <corners android:radius="5dip" />
        <gradient
                                android:startColor="#8010A9E2"
                    android:centerColor="#80aaaaaa"
                    android:centerY="0.5"
                    android:endColor="#8010A9E2"
                    android:angle="270"
        />
    </shape>
</item>

<item android:id="@android:id/secondaryProgress">
    <clip>
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="#8010A9E2"
                    android:centerColor="#80ffb600"
                    android:centerY="0.5"
                    android:endColor="#8010A9E2"
                    android:angle="270"
            />
        </shape>
    </clip>
</item>

<item android:id="@android:id/progress">
    <clip>
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
            
                android:startColor="#ff123456"
                android:centerColor="#ff0321EF"
                android:centerY="0.5"
                android:endColor="#ff123456"
                android:angle="270"
            />
        </shape>
    </clip>
</item>

</layer-list>
